<%- include('../partials/header.ejs') %>

<div class="container">
    <div class="text-center">
        <h1>Add new Comment to <%= campground.name %> </h1>
        <div style="width:30%;" class="mx-auto">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Comment">
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-secondary btn-block" type="submit">
                </div>
            </form>
            <a class="btn btn-primary mt-5" href="/">Home</a>
        </div>
    </div>
</div>

<%- include('../partials/footer.ejs') %>

<%- include('../partials/header.ejs') %>
<div class="container">
    <div class="text-center">
        <h1>Create a new Campground</h1>
        <div style="width:30%;" class="mx-auto">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[name]" placeholder="Name of Campground">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="campground[price]" placeholder="Price" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[image]" placeholder="URL of Image">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[description]" placeholder="Description">
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-secondary btn-block" type="submit">
                </div>
            </form>
            <a class="btn btn-primary mt-5" href="/">Home</a>
        </div>
    </div>
</div>
<%- include('../partials/footer.ejs')  %> 
